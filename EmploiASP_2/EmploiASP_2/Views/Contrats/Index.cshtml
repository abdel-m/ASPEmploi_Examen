@model IEnumerable<EmploiASP_2.Contrat>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Date d'entrée")
        </th>
        <th>
            @Html.DisplayName("Date de dortie")
        </th>
        <th>
            @Html.DisplayName("Entreprise cliente")
        </th>
        <th>
            @Html.DisplayName("id ContratTravailleurNonSoumis")
        </th>
        <th>
            @Html.DisplayName("id ContratTravailleurSoumis")
        </th>
        <th>
            @Html.DisplayName("Numéro dossier medical")
        </th>
        <th>
            @Html.DisplayName("Profession")
        </th>
        <th>
            @Html.DisplayName("Nom travailleur")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dateEntree)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateSortie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EntrepriseClient.TraductionEntreprise.Where(ec =>ec.Langue.libelle == "fr").First().tradTexteEntreprise)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContratTravailleurNonSoumis.idContrat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContratTravailleurSoumis.idContrat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContratTravailleurSoumis.numDossierMedical)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profession.TraductionProfession.Where(ec => ec.Langue.libelle == "fr").First().TexteTradProfession)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Travailleur.nom)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idContrat }) |
            @Html.ActionLink("Details", "Details", new { id=item.idContrat }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idContrat })
        </td>
    </tr>
}

</table>
